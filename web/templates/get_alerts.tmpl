{{ define "get_alerts.tmpl" }}
{{ template "header.tmpl" .}}

      <table class="table">
        <thead>
            <tr>
                            
                <th>id</th>
                <th>username</th>
                <th>coin code</th>
                <th>price</th>
                <th>condition</th>
                <th>start date</th>
                <th>end date</th>
                <th>is active</th>
            </tr>
        </thead>
        <tbody>
         {{ range . }}   
            <tr>
                <td>{{ .Id_alert }}</td>
                <td>{{ .Username }} </td>
                <td>{{ .Coin_Code }} </td>               
                <td>{{ .Price }}</td>
                <td>{{ .Condition }}</td>
                <td>{{ .Start_date }}</td>
                <td>{{ .End_date }}</td>                                
                <td>{{ .Is_active }}</td>
            </tr>
          {{ end }}   

        </tbody>
      </table>
      <a name="" id="" class="btn btn-primary" href="/alerts/new" role="button">nueva alerta</a>

      
{{ template "footer.tmpl" .}}
{{ end }}