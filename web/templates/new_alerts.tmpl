{{ define "new_alerts.tmpl" }}
{{ template "header.tmpl" .}}

<div class="card">
    <div class="card-header">
        Crear Nueva Alerta
    </div>
    <div class="card-body">
        <form class="row g-3 needs-validation"  method="post" action="/alerts"  novalidate>

           <div class="col-md-12">
              <label for="">Nombre de Usuario</label>
              <input type="text"
                class="form-control" name="username" id="username" aria-describedby="helpId" placeholder="" required>
              <small id="helpId" class="form-text text-muted">ingrese el nombre de usuario</small>
             <div class="invalid-feedback">
                Please provide a valid username
            </div>  
            </div>
           <div class="col-md-4">
              <label for="">Codigo de Moneda</label>
              <input type="text"
                class="form-control" name="coin_code" id="coin_code" aria-describedby="helpId" placeholder="" required>
              <small id="helpId" class="form-text text-muted">ingrese el codigo de la moneda</small>
                  <div class="invalid-feedback">
                Please provide a valid coin code
                    </div>
            
            </div>            
           <div class="col-md-4">
            <label for="" class="form-label"> Condicion </label>
            <select id="condition" class="form-control" name="condition" id="condition">
              <option selected>mayor</option>
              <option>menor</option>
              <option>igual</option>
              <option>menor igual</option>
              <option>mayor igual</option>
          </select>
          </div>
          <div class="col-md-4">
              <label for="">Precio</label>
              <input type="number" step="0.01" class="form-control" name="price" id="price" aria-describedby="helpId" placeholder="" required>
              <small id="helpId" class="form-text text-muted">ingrese el precio</small>
          
                  <div class="invalid-feedback">
                Please provide a valid price
                    </div>
            </div>
            <div class="col-md-4">
                <label for="">Fecha inicio alerta</label>
                <input type="date" class="form-control" name="start_date" id="start_date" aria-describedby="helpId" placeholder="" required>
                <small id="helpId" class="form-text text-muted">ingrese la fecha desde</small>
             <div class="invalid-feedback">
                Please provide a valid date
             </div>
            
              </div>


            <div class="col-md-4">
                <label for="">Fecha fin de alerta</label>
                <input type="date" class="form-control" name="end_date" id="end_date" aria-describedby="helpId" placeholder="" required>
                <small id="helpId" class="form-text text-muted">ingrese la fecha hasta</small>
             <div class="invalid-feedback">
                Please provide a valid date
             </div>
            </div>
          
          <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Grabar</button>
          </div>
        </form>
    </div>
</div>
<div id="error"></div>

<script>

(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()

$('.datepicker').each(function (){
    $(this).datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy',
        todayBtn: "linked"
    });
});
var sDate,eDate;
$("#start_date").datepicker().on('changeDate',function(e){
    sDate = new Date($(this).datepicker('getUTCDate'));
    checkDate();
});

$("#end_date").datepicker().on('changeDate',function(date){
    eDate = new Date($(this).datepicker('getUTCDate'));
    checkDate();
});

function checkDate()
{
    if(sDate && eDate && (eDate<sDate))
    {
        $('#error').text("End Date debe ser menor a Start Date");
    }
    else
    {
        $('#error').text("");
    }
}
</script>



{{ template "footer.tmpl" .}}
{{ end }}
