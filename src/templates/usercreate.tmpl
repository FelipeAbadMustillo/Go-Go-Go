{{ define "usercreate.tmpl" }}
{{ template "header.tmpl" .}}

<div class="card">
    <div class="card-header">
        Nuevo Usuario
    </div>
    <div class="card-body">
        <form method="post" action="/insertusers">
           <div class="form-group">
              <label for="">Nombre de Usuario</label>
              <input type="text"
                class="form-control" name="username" id="username" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">ingrese el nombre de usuario</small>
            </div>
          <div class="form-group">
              <label for="">Email</label>
              <input type="text" class="form-control" name="email" id="email" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">ingrese el mail</small>
            </div>
          <div class="form-group">
              <label for="">Password</label>
              <input type="password" class="form-control" name="password" id="password" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">ingrese el password</small>
            </div>

            <button type="submit" class="btn btn-primary">Agregar nuevo usuario</button>
        </form>
    </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>

{{ template "footer.tmpl" .}}
{{ end }}